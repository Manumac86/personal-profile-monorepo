---
import { Image } from "astro:assets"; 
import { Linkedin, Mail, Github } from '@lucide/astro';
import { getProfileImage, getAbout } from '../services/cm';
const profileImage = await getProfileImage();
const about = await getAbout();
const profileImageUrl = `${import.meta.env.STRAPI_URL}${profileImage}`;
---

<header class="flex flex-col items-center justify-center gap-4">
  <div class="flex items-center justify-center gap-4">
    <div class="flex items-center justify-center">
      <Image src={profileImageUrl} alt="Profile" width={100} height={100} class="rounded-full" />
    </div>
    <div class="flex flex-col">
      <h1 class='text-2xl font-mono'>EMMANUEL MARTINEZ</h1>
      <p class='text-gray-400'>{about.title.toUpperCase()}</p>
      <div class="flex flex-col w-full">
        <div class="flex items-center gap-2">
          <a href="https://www.linkedin.com/in/emmartinez-profile/" target="_blank" class="text-gray-400 rounded-xl p-2 bg-gray-800">
            <Linkedin name="" color="white" size={16} />
          </a>
          <a href="https://www.linkedin.com/in/emmartinez-profile/" target="_blank" class="text-gray-400 rounded-xl p-2 bg-gray-800">
            <Mail name="" color="white" size={16} />
          </a>
          <a href="https://www.linkedin.com/in/emmartinez-profile/" target="_blank" class="text-gray-400 rounded-xl p-2 bg-gray-800">
            <Github name="" color="white" size={16} />
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
