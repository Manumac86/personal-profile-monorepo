---
import { Image } from "astro:assets";
import { Linkedin, Mail, Github } from "@lucide/astro";
import { getProfileImage, getAbout } from "../services/cm";
const profileImage = await getProfileImage();
const about = await getAbout();
const profileImageUrl = `${import.meta.env.STRAPI_URL}${profileImage}`;
---

<header class='w-full flex flex-col justify-center gap-4 items-start'>
  <div class='flex items-center justify-center gap-4'>
    <div class='flex items-center justify-center'>
      <Image src={profileImageUrl} alt='Profile' width={120} height={120} class='rounded-full' />
    </div>
    <div class='flex flex-col gap-2'>
      <h1 class='text-xl md:text-3xl'>EMMANUEL MARTINEZ</h1>
      <p class='text-gray-400'>{about.title.toUpperCase()}</p>
      <div class='flex flex-col w-full'>
        <div class='flex items-center gap-2'>
          <a
            href='https://www.linkedin.com/in/emmartinez-profile/'
            target='_blank'
            class='text-gray-400 rounded-xl p-2 bg-gray-800'
            aria-label='LinkedIn'
          >
            <Linkedin name='' color='white' size={16} />
          </a>
          <a
            href='mailto:emmartinez@me.com'
            target='_blank'
            class='text-gray-400 rounded-xl p-2 bg-gray-800'
            aria-label='Email'
          >
            <Mail name='' color='white' size={16} />
          </a>
          <a
            href='https://github.com/Manumac86'
            target='_blank'
            class='text-gray-400 rounded-xl p-2 bg-gray-800'
            aria-label='GitHub'
          >
            <Github name='' color='white' size={16} />
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
