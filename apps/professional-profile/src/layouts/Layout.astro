---
import { getGlobal } from "@/services/cm";
const global = await getGlobal();
import 'atropos/css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{global.siteName}</title>
		<meta name="description" content={global.siteDescription.split("\n").join(" | ")} />
	</head>
	<body>
		<div class="flex flex-col md:flex-row w-full h-full min-h-screen bg-black p-6 text-white">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
